#footer
  position: relative
  background: $light-blue
  background-attachment: local
  background-position: bottom
  background-size: cover

  if hexo-config('footer_bg') != false
    &:before
      position: absolute
      width: 100%
      height: 100%
      content: ''

#footer-wrap
  position: relative
  padding: 2rem 1rem
  if hexo-config('footer_typeface_color_custom') != ''
     color: convert(hexo-config('footer_typeface_color_custom'))
  else
     color: var(--light-grey)
  text-align: center

  a
    if hexo-config('footer_a_color_custom') != ''
       color: convert(hexo-config('footer_a_color_custom'))
    else
       color: var(--light-grey)

    &:hover
      text-decoration: underline

  .footer-separator
    margin: 0 .2rem

  .icp-icon
    padding: 0 4px
    vertical-align: text-bottom
